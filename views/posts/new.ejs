<%- include('partials/header')%>

    <h1 class="text-center">Create a new adoption post</h1>
    <h2 class="text-center">Complete the below information about the Adoptee</h2>
    <div class="d-flex justify-content-center">
        <form class="d-block mt-4" id="adoptionForm" action="">
            <table class="table">
                <tbody>
                    <tr>
                        <th scope="row"> <label class="key" for="name">Name: </label></th>
                        <td><input type="text" name="name" id="name" required></td>
                    </tr>
                    <tr>
                        <th scope="row"> <label class="key" for="age">Age:</label></th>
                        <td><select id="age" name="age">
                                <option value="" default></option>
                                <option value="Young">Young (0 - 6 months)</option>
                                <option value="Adolescent">Adolescent (7 months - 2 years)</option>
                                <option value="Prime">Prime (3 - 6 years)</option>
                                <option value="Mature">Mature (7 to 10 years)</option>
                                <option value="Senior">Senior (11+ years)</option>
                            </select></td>
                    </tr>

                    <tr>
                        <th scope="row"> <label class="key" for="color">Color: </label></th>
                        <td> <input type="text" name="color" id="color" required></td>
                    </tr>
                    <tr>
                        <th scope="row"><label class="key" for="breed">Breed: </label></th>
                        <td> <input type="text" name="breed" id="breed" required></td>
                    </tr>
                    <tr>
                        <th scope="row"> <label class="key" for="gender">Gender: </label></th>
                        <td> <select id="gender" name="gender">
                                <option value="" default></option>
                                <option value="female">Female</option>
                                <option value="male">Male</option>
                            </select></td>
                    </tr>
                    <tr>
                        <th scope="row"><label class="key" for="backstory">Description/History: </label></th>
                        <td> <textarea name="backstory" id="backstory" cols="50" rows="8"></textarea></td>
                    </tr>
                    <tr>
                        <th scope="row"><label class="key" for="source">Adoption Source: </label></th>
                        <td><input type="text" name="source" id="source" required></td>
                    </tr>
                    <tr>
                        <th scope="row"><label class="key" for="sourcetype">Adoption Source Type: </label></th>
                        <td><input type="text" name="sourcetype" id="sourcetype" required></td>
                    </tr>
                    <tr>
                        <th scope="row"><label class="key" for="adoptionFee">Adoption Fee:</label></th>
                        <td><input type="number" id="adoptionFee" name="adoptionFee" min="0" required></td>
                    </tr>
                    <tr>
                        <th scope="row">
                            <legend class="key">Included in Adoption Fee: (Select all that applies)</legend>
                        </th>
                        <td>
                            <ul class="feeIncludes">
                                <li class="feeIncludesItem"><input type="checkbox" id="sterilized" name="sterilized"
                                        value="sterilized">
                                    <label for="sterilized">
                                        Sterilized</label>
                                </li>
                                <li class="feeIncludesItem"><input type="checkbox" id="FIVFelV tested"
                                        name="FIVFelV tested" value="FIVFelV tested">
                                    <label for="sterilized">
                                        FIV/FelV tested</label>
                                </li>
                                <li class="feeIncludesItem"><input type="checkbox" id="vaccine" name="vaccine"
                                        value="vaccine">
                                    <label for="vaccine">
                                        Basic Vaccine</label>
                                </li>
                                <li class="feeIncludesItem"><input type="checkbox" id="microchipped" name="microchipped"
                                        value="microchipped">
                                    <label for="microchipped">
                                        Microchipped</label>
                                </li>
                                <li class="feeIncludesItem"><input type="checkbox" id="other" name="other"
                                        value="other">
                                    <label for="other">Other </label>
                                    <span class="otherInputSpan" style="display: none">: <input type="text"
                                            class="otherInput" name="otherInput"></span>
                                </li>
                            </ul>
                        </td>
                    </tr>
                    <tr>
                        <th scope="row"><label class="key" for="img">Upload Image :</label></th>
                        <td><input type="file" id="img" name="img" required></td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <div class="d-grid gap-2 col-6 mx-auto">
                                <button class="btn bg-dark text-white" type="button" id="submit">Submit</button>
                            </div>
                        </td>
                    </tr>
                </tbody>


        </form>
    </div>

    <script src="/js/assets/create.js">
        console.log("hi");
    </script>
    </body>